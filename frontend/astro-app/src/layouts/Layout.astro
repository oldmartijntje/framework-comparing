---
export interface Props {
  title: string;
  currentPage?: string;
}

const { title, currentPage = 'tictactoe' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="description" content="Astro Tic-Tac-Toe and Todo App" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{title}</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Astro - Tic-Tac-Toe</a>
      <button 
        class="navbar-toggler" 
        type="button" 
        data-bs-toggle="collapse" 
        data-bs-target="#navbarNav"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a 
              class={`nav-link ${currentPage === 'tictactoe' ? 'active' : ''}`}
              href="/"
            >
              Tic Tac Toe
            </a>
          </li>
          <li class="nav-item">
            <a 
              class={`nav-link ${currentPage === 'todo' ? 'active' : ''}`}
              href="/todo"
            >
              Todo List
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <main>
    <slot />
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
